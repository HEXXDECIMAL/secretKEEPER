{
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "ui",
    "distDir": "ui"
  },
  "package": {
    "productName": "SecretKeeper",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.codegroove.secretkeeper.app",
      "targets": "all",
      "deb": {
        "depends": []
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "SecretKeeper",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "center": true
      },
      {
        "label": "alert",
        "title": "Access Blocked",
        "url": "alert.html",
        "width": 600,
        "height": 500,
        "resizable": false,
        "visible": false,
        "center": true,
        "alwaysOnTop": true
      }
    ]
  }
}
